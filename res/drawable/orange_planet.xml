<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

         <item >
            <shape android:shape="oval" >
                <size
                    android:height="80dp"
                    android:width="80dp" />

                <gradient
                    android:angle="360"
              		android:centerX=".8"
                	android:centerY=".1"    
                    android:endColor="#2e3436"
                    android:startColor="@color/Black" />
            </shape>
    	</item>
    	<item android:right="2dp"
    	      android:bottom="1dp">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval" >
            <gradient
                android:angle="45"
                android:centerX=".5"
                android:centerY=".1"
                android:endColor="@color/LightOrange"
               android:gradientRadius="70"
                android:startColor="@color/OrangeRed" />

            <size
                android:height="100dp"
                android:width="100dp" />

            <stroke android:width="1dp" android:color="@color/OrangeRed" />
        </shape>
    </item>

</layer-list>