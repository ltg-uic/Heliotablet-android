<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Red Close Button -->
    <item>
        <shape
                android:shape="rectangle">
            <padding
                    android:bottom="4dp"
                    android:left="0dp"
                    android:right="0dp"
                    android:top="0dp"/>

            <gradient
                    android:angle="270"
                    android:centerX="0.55"
                    android:startColor="#000F29"
                    android:centerColor="@color/BGBlueMedium"
                    android:endColor="@color/BGBlueDark"/>
            <corners android:radius="7dp"/>
            <stroke
                    android:width="2dp"
                    android:color="@color/WhiteSmoke"/>


        </shape>
    </item>
</layer-list>