<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="oval" >
            <size
                android:height="80dp"
                android:width="80dp" />

            <gradient
                android:centerX="75%"
                android:centerY="25%"
                android:endColor="#000000"
                android:gradientRadius="100"
                android:startColor="#ffffff"
                android:type="radial" />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="2dp">
        <shape android:shape="oval" >
            <size
                android:height="80dp"
                android:width="80dp" />

            <gradient
                android:centerX="75%"
                android:centerY="25%"
                android:endColor="@color/PlanetGreen"
                android:gradientRadius="100"
                android:startColor="#DDFFDD"
                android:type="radial" />

            <size
                android:height="100dp"
                android:width="100dp" />

            <stroke
                android:width="1dp"
                android:color="@color/PlanetGreen" />
        </shape>
    </item>

</layer-list>