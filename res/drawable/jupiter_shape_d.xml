<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
	<item>
	<shape 
	    android:shape="oval">
	    	<size
	             android:height="80dp"
	             android:width="80dp" />
	    	<gradient
	            android:type="radial"
	            android:startColor="#ffffff"
	            android:endColor="@color/PlanetGreyShadow"
	            android:gradientRadius="100"
	            android:centerX="75%"
	            android:centerY="25%"/>
	</shape>
	</item>
	<item android:left="1dp"
    	      android:bottom="2dp">
	<shape android:shape="oval">
	    	<size
	             android:height="80dp"
	             android:width="80dp" />
	    	<gradient
	            android:type="radial"
	            android:startColor="#DDFFDD"
	            android:endColor="@color/PlanetGreen"
	            android:gradientRadius="100"
	            android:centerX="75%"
	            android:centerY="25%"/>
	    	<size
                android:height="100dp"
                android:width="100dp" />
	    	<stroke android:width="1dp" android:color="@color/PlanetGreen" />
	</shape>
	</item>
	<item>
			<ImageView
			    android:layout_height="wrap_content"
			    android:layout_width="wrap_content"
			    android:src="@drawable/planet_disabled" />
	</item>
</layer-list>