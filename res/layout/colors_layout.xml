<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/planetColorsView"
    android:layout_width="400dp"
    android:layout_height="match_parent"
    android:background="@color/Aquamarine" >

    <RelativeLayout
        android:id="@+id/planet1"
        style="@style/planetColor"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >
    </RelativeLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@+id/planet1"
        android:background="@drawable/planet_drag" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/planet1"
        android:layout_below="@+id/planet1"
        android:layout_marginTop="123dp"
        android:drawable="@drawable/planet_drag"
        android:text="TextView" />

</RelativeLayout>