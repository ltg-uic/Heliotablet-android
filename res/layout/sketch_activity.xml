        <TextView
            style="@style/SketchTextStyle"
            android:text="@string/earth" />
    </RelativeLayout>
    

    <RelativeLayout
        android:id="@+id/neptune_sketchLabel"
        style="@style/sketchPlanetTextLabelStyle"
