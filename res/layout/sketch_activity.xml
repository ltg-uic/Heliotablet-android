        android:layout_marginLeft="425dp"
        android:layout_marginTop="250dp" 
        android:background="@drawable/uranus_shape"
        >

        
    </RelativeLayout>
	
     <RelativeLayout
        android:id="@+id/graySketchPlanet"
        style="@style/sketchPlanetView"
        android:layout_marginLeft="600dp"
        android:layout_marginTop="250dp" 
        android:background="@drawable/mars_shape"
        >

    
    </RelativeLayout>
    

    <!-- labels -->

    <RelativeLayout
        android:id="@+id/mercurySketchLabel"
        style="@style/sketchPlanetTextLabelStyle"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp" >

        <TextView
            style="@style/SketchTextStyle"
            android:text="@string/mercury" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/venusSketchLabel"
        style="@style/sketchPlanetTextLabelStyle"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="70dp" >

