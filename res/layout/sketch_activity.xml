        android:background="@drawable/purple_planet"
        >

        <TextView
            android:id="@+id/purpleSketchText"
            style="@style/sketchPlanetViewText"
            android:text="@string/purple" />
    </RelativeLayout>
     

    <!-- labels -->

    <RelativeLayout
        android:id="@+id/mercurySketchLabel"
        style="@style/sketchPlanetTextLabelStyle"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp" >

