        >

        
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/yellowSketchPlanet"
        style="@style/sketchPlanetView"
        android:layout_marginLeft="600dp"
        android:layout_marginTop="10dp" 
        android:background="@drawable/saturn_shape"
        >

       
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/greenSketchPlanet"
        style="@style/sketchPlanetView"
        android:layout_marginLeft="775dp"
        android:layout_marginTop="10dp" 
        android:background="@drawable/jupiter_shape"
        >

        
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/pinkSketchPlanet"
        style="@style/sketchPlanetView"
        android:layout_marginLeft="950dp"
        android:layout_marginTop="10dp" 
        android:background="@drawable/venus_shape"
        >

       
    </RelativeLayout>

    
    <RelativeLayout
        android:id="@+id/brownSketchPlanet"
        style="@style/sketchPlanetView"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="250dp" 
        android:background="@drawable/mercury_shape"
        >

      
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/orangeSketchPlanet"
