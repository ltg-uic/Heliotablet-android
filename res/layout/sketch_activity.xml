            android:text="@string/jupiter" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/marsSketchLabel"
        style="@style/sketchPlanetTextLabelStyle"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="370dp" >

        <TextView
