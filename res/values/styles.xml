<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
   
    <style name="theoryPlanetLabel" parent="android:Widget.Holo.Light.TextView">
        <item name="android:background">@color/PlanetTheoryTableColor</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_height">71sp</item>
        <item name="android:layout_gravity">fill_horizontal</item>
    </style>
    <style name="theoryPlanetHeaderLabel" parent="android:Widget.Holo.Light.TextView">
        <item name="android:background">@color/PlanetTheoryTableColor</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:textSize">23sp</item>
    </style>
    <style name="theoryPlanetTableGridStyle">
        <item name="android:background">@color/PlanetTheoryTableColor</item>
        <item name="android:layout_width">810dp</item>
        <item name="android:layout_height">71dp</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="planetColor">
        <item name="android:background">@color/Crimson</item>
        <item name="android:layout_marginLeft">52dp</item>
        <item name="android:layout_marginTop">59dp</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
    </style>
</resources>