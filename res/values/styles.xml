<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
   
    <style name="theoryPlanetLabel" parent="android:Widget.Holo.Light.TextView">
        <item name="android:background">@color/PlanetTheoryTableColor</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_height">86dp</item>
        <item name="android:layout_gravity">fill_horizontal</item>
    </style>
    <style name="theoryPlanetHeaderLabel" parent="android:Widget.Holo.Light.TextView">
        <item name="android:background">@color/PlanetTheoryTableColor</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:textSize">23sp</item>
    </style>
    <style name="theoryPlanetTableGridStyle">
        <item name="android:background">@color/PlanetTheoryTableColor</item>
        <item name="android:layout_width">810dp</item>
        <item name="android:layout_height">86dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">0dp</item>
    </style>
    <style name="planetColor">
        <item name="android:background">@color/Crimson</item>
        <item name="android:layout_marginLeft">52dp</item>
        <item name="android:layout_marginTop">59dp</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
    </style>
        
    <style name="sketchPlanetTextLabelStyle">
        <item name="android:background">@drawable/sketch_rect</item>
	    <item name="android:layout_width">145dp</item>
        <item name="android:layout_height">50dp</item>
    </style>
    <style name="SketchTextStyle" parent="android:Widget.TextView">
        <item name="android:textSize">25dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="sketchPlanetViewText" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textColor">@color/White</item>
        <item name="android:textSize">25dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="sketchPlanetView" parent="@style/planetColor">
        <item name="android:layout_width">145dp</item>
        <item name="android:layout_height">145dp</item>
    </style>
    
     <style name="theoryPlanetView" parent="@style/planetColor">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
    </style>
    
     <style name="theoryPlanetColorText" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textColor">@color/White</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    
     <style name="theoryReasonText" parent="android:Widget.Holo.Light.TextView">
         <item name="android:textColor">@color/White</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_marginTop">23dp</item>
        <item name="android:layout_alignTop">@+id/colorLabelText</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>    
     
     
</resources>